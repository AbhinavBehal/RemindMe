<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemindMe.Views.AddReminderPage"
             Title="Add a reminder">

    <StackLayout
        Padding="10">
        <Label
            Text="Title"
            TextColor="CornflowerBlue"
            FontSize="Small"/>
        <Entry
            Text="{Binding TitleInput, Mode=TwoWay}"/>
        
        <Label
            Text="Description"
            TextColor="CornflowerBlue"
            FontSize="Small"/>
        <Editor
            Text="{Binding DescriptionInput, Mode=TwoWay}"/>

        <Button 
            Text="Add"
            Command="{Binding SubmitReminderCommand}"/>
    </StackLayout>
    
</ContentPage>